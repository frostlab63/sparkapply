# SparkApply Staging Environment Configuration

# Application Environment
NODE_ENV=staging
APP_NAME=SparkApply
APP_VERSION=1.0.0

# Frontend Configuration
VITE_API_URL=https://api-staging.sparkapply.com/api/v1
VITE_APP_ENV=staging
VITE_ENABLE_ANALYTICS=true

# Backend Configuration
PORT=3001
API_VERSION=v1

# Database Configuration (use staging database)
DATABASE_URL=postgresql://sparkapply_staging:staging_password@staging-db.sparkapply.com:5432/sparkapply_staging

# Redis Configuration
REDIS_URL=redis://staging-redis.sparkapply.com:6379

# JWT Configuration (use different secrets for staging)
JWT_SECRET=staging-jwt-secret-key-different-from-prod
JWT_REFRESH_SECRET=staging-refresh-secret-key-different-from-prod
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (use staging email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@sparkapply.com
SMTP_PASS=staging-app-password
FROM_EMAIL=staging@sparkapply.com
FROM_NAME=SparkApply Staging

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DEST=uploads/

# Security Configuration
CORS_ORIGIN=https://staging.sparkapply.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=staging-session-secret

# External API Keys (use staging/test keys)
GOOGLE_CLIENT_ID=staging-google-oauth-client-id
GOOGLE_CLIENT_SECRET=staging-google-oauth-client-secret

# Monitoring and Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
