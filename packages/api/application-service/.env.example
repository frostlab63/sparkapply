# Application Service Environment Configuration

# Application
NODE_ENV=development
PORT=3005

# Database
DATABASE_URL=postgresql://sparkapply:password123@localhost:5432/sparkapply_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sparkapply_dev
DB_USER=sparkapply
DB_PASSWORD=password123

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Service URLs
USER_SERVICE_URL=http://localhost:3001
JOB_SERVICE_URL=http://localhost:3002

# JWT Configuration (must match user-service)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sparkapply.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/application-service.log

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_INTERVIEW_SCHEDULING=true
