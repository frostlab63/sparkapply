{
  "name": "@sparkapply/job-service",
  "version": "1.0.0",
  "description": "Job posting, search, and management service for SparkApply",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "elasticsearch": "^16.7.3",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.1",
    "fuse.js": "^7.0.0",
    "helmet": "^7.2.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "openai": "^6.1.0",
    "pg": "^8.11.0",
    "redis": "^4.7.0",
    "sequelize": "^6.37.7",
    "sharp": "^0.33.5",
    "text-similarity-node": "^1.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.3",
    "babel-jest": "^30.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.0"
  },
  "keywords": [
    "microservice",
    "job-management",
    "job-search",
    "sparkapply"
  ],
  "author": "SparkApply Team",
  "license": "MIT"
}
