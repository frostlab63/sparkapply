# SparkApply Production Environment Configuration
# ================================================
# 
# SECURITY NOTICE: This file contains production configuration templates.
# Replace all placeholder values with actual production secrets.
# Never commit actual production secrets to version control.

# Application Environment
NODE_ENV=production
APP_NAME=SparkApply
APP_VERSION=1.0.0
APP_URL=https://sparkapply.com
API_URL=https://api.sparkapply.com/v1

# Frontend Configuration
VITE_API_URL=https://api.sparkapply.com/api/v1
VITE_APP_ENV=production
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=REPLACE_WITH_FRONTEND_SENTRY_DSN

# Backend Configuration
PORT=3001
HOST=0.0.0.0
API_VERSION=v1
CORS_ORIGIN=https://sparkapply.com,https://www.sparkapply.com

# Database Configuration (use production database)
DATABASE_URL=postgresql://sparkapply_prod:CHANGE_THIS_PASSWORD@prod-db.sparkapply.com:5432/sparkapply_prod
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=true

# Redis Configuration
REDIS_URL=redis://prod-redis.sparkapply.com:6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_REDIS_PASSWORD
REDIS_DB=0

# JWT Configuration (use strong secrets for production)
JWT_SECRET=CHANGE_THIS_TO_STRONG_PRODUCTION_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_STRONG_REFRESH_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (use production email service)
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_API_KEY
FROM_EMAIL=noreply@sparkapply.com
FROM_NAME=SparkApply

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_DEST=uploads/
AWS_S3_BUCKET=sparkapply-production-files
AWS_CLOUDFRONT_DOMAIN=cdn.sparkapply.com

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY

# Security Configuration
CORS_ORIGIN=https://sparkapply.com,https://www.sparkapply.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=CHANGE_THIS_TO_PRODUCTION_SESSION_SECRET
BCRYPT_ROUNDS=12
HELMET_CSP_ENABLED=true

# External API Keys (use production keys)
GOOGLE_CLIENT_ID=CHANGE_THIS_TO_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_THIS_TO_PRODUCTION_GOOGLE_CLIENT_SECRET
LINKEDIN_CLIENT_ID=REPLACE_WITH_LINKEDIN_CLIENT_ID
LINKEDIN_CLIENT_SECRET=REPLACE_WITH_LINKEDIN_CLIENT_SECRET

# AI Service Configuration
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Monitoring and Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
NEW_RELIC_LICENSE_KEY=REPLACE_WITH_NEW_RELIC_KEY

# Analytics
GOOGLE_ANALYTICS_ID=REPLACE_WITH_GA_ID
MIXPANEL_TOKEN=REPLACE_WITH_MIXPANEL_TOKEN

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
FEATURE_AI_COVER_LETTERS=true
FEATURE_AI_RESUME_OPTIMIZATION=true
FEATURE_PREMIUM_FEATURES=true

# Payment Processing
STRIPE_PUBLISHABLE_KEY=REPLACE_WITH_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=REPLACE_WITH_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=REPLACE_WITH_STRIPE_WEBHOOK_SECRET

# Health Check and Metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics

# SSL/TLS Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# Performance Configuration
CLUSTER_MODE=true
COMPRESSION_ENABLED=true
CACHE_TTL=3600
