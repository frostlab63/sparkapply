# SparkApply Production Environment Configuration
# IMPORTANT: This file contains sensitive production settings
# Never commit actual production secrets to version control

# Application Environment
NODE_ENV=production
APP_NAME=SparkApply
APP_VERSION=1.0.0

# Frontend Configuration
VITE_API_URL=https://api.sparkapply.com/api/v1
VITE_APP_ENV=production
VITE_ENABLE_ANALYTICS=true

# Backend Configuration
PORT=3001
API_VERSION=v1

# Database Configuration (use production database)
DATABASE_URL=postgresql://sparkapply_prod:CHANGE_THIS_PASSWORD@prod-db.sparkapply.com:5432/sparkapply_prod

# Redis Configuration
REDIS_URL=redis://prod-redis.sparkapply.com:6379

# JWT Configuration (use strong secrets for production)
JWT_SECRET=CHANGE_THIS_TO_STRONG_PRODUCTION_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_TO_STRONG_REFRESH_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (use production email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@sparkapply.com
SMTP_PASS=CHANGE_THIS_TO_PRODUCTION_PASSWORD
FROM_EMAIL=noreply@sparkapply.com
FROM_NAME=SparkApply

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DEST=uploads/

# Security Configuration
CORS_ORIGIN=https://sparkapply.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=CHANGE_THIS_TO_PRODUCTION_SESSION_SECRET

# External API Keys (use production keys)
GOOGLE_CLIENT_ID=CHANGE_THIS_TO_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_THIS_TO_PRODUCTION_GOOGLE_CLIENT_SECRET

# Monitoring and Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_VERIFICATION=true
