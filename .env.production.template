# SparkApply Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_super_secure_database_password_here
POSTGRES_PORT=5432

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis password (optional but recommended)
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info

# Service Ports
USER_SERVICE_PORT=3001
JOB_SERVICE_PORT=3002
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Update these URLs to match your production domain
FRONTEND_URL=https://your-domain.com
VITE_API_BASE_URL=https://api.your-domain.com
VITE_USER_SERVICE_URL=https://api.your-domain.com/api/v1
VITE_JOB_SERVICE_URL=https://api.your-domain.com/api/jobs

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending emails (registration, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# EXTERNAL API KEYS (Optional)
# =============================================================================
# Job board API keys for enhanced job scraping
LINKEDIN_API_KEY=your_linkedin_api_key_here
INDEED_API_KEY=your_indeed_api_key_here
GLASSDOOR_API_KEY=your_glassdoor_api_key_here

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# =============================================================================
# OPTIONAL SERVICES CONFIGURATION
# =============================================================================
# MongoDB (for analytics - uncomment if using)
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=your_mongo_admin_password
# MONGODB_URI=mongodb://admin:your_mongo_admin_password@mongodb:27017/sparkapply_analytics?authSource=admin
# MONGODB_PORT=27017

# Elasticsearch (for advanced search - uncomment if using)
# ELASTICSEARCH_PORT=9200

# Nginx Proxy (if using separate nginx container)
# NGINX_HTTP_PORT=8080
# NGINX_HTTPS_PORT=8443

# =============================================================================
# SSL CERTIFICATE CONFIGURATION
# =============================================================================
# Paths to SSL certificate files (if using HTTPS)
# SSL_CERT_PATH=/path/to/your/certificate.crt
# SSL_KEY_PATH=/path/to/your/private.key

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID (optional)
# GA_TRACKING_ID=GA-XXXXXXXXX

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# S3 or similar for backups (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-backup-bucket
# AWS_REGION=us-east-1

# =============================================================================
# SOCIAL LOGIN CONFIGURATION (Optional)
# =============================================================================
# Google OAuth
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# LinkedIn OAuth
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_JOB_SCRAPING=false
ENABLE_AI_MATCHING=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate secrets and passwords
# 4. Enable SSL/TLS for all external communications
# 5. Monitor logs and set up alerting for production issues
# 6. Test all configurations in a staging environment first
