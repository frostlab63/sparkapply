{
  "name": "sparkapply",
  "version": "1.0.0",
  "description": "AI-powered job application platform with swipe-based discovery",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/start-dev.sh",
    "dev:pnpm": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "build:frontend": "pnpm --filter web build",
    "build:backend": "pnpm --filter user-service build",
    "test": "pnpm run --recursive test",
    "test:frontend": "pnpm --filter web test",
    "test:backend": "pnpm --filter user-service test",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:coverage": "pnpm --filter web test:coverage",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "format": "pnpm run --recursive format",
    "format:check": "pnpm run --recursive format:check",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "setup": "pnpm install && pnpm run --recursive setup",
    "start": "./scripts/start-dev.sh",
    "stop": "pkill -f 'npm run dev' || true",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker compose -f docker-compose.dev.yml down --remove-orphans",
    "logs": "tail -f logs/*.log",
    "logs:user": "tail -f logs/user-service.log",
    "logs:job": "tail -f logs/job-service.log",
    "logs:app": "tail -f logs/application-service.log",
    "logs:frontend": "tail -f logs/frontend.log"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
